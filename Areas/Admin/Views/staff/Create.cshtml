@model _125_BCCK.Models.User

@{
    ViewBag.Title = "Thêm Mới Nhân Viên";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="h3 mb-4 text-gray-800">Thêm Mới Nhân Viên</h1>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Thông tin tài khoản</h6>
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    // Hiện thị lỗi nếu validate sai
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <div class="form-group">
                        <label class="font-weight-bold">Họ và Tên <span class="text-danger">*</span></label>
                        @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nhập họ tên đầy đủ..." } })
                        @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger small" })
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label class="font-weight-bold">Email đăng nhập <span class="text-danger">*</span></label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @type = "email", @placeholder = "example@petcare.com" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger small" })
                        </div>
                        <div class="form-group col-md-6">
                            <label class="font-weight-bold">Số điện thoại</label>
                            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", @type = "number", @placeholder = "09..." } })
                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger small" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="font-weight-bold">Mật khẩu khởi tạo <span class="text-danger">*</span></label>
                        @* Dùng PasswordFor để ẩn ký tự *@
                        @Html.PasswordFor(model => model.PasswordHash, new { @class = "form-control", @placeholder = "Nhập mật khẩu..." })
                        @Html.ValidationMessageFor(model => model.PasswordHash, "", new { @class = "text-danger small" })
                    </div>

                    <div class="form-group">
                        <label class="font-weight-bold">Địa chỉ</label>
                        @Html.TextAreaFor(model => model.Address, new { @class = "form-control", @rows = "3", @placeholder = "Nhập địa chỉ liên hệ..." })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger small" })
                    </div>

                    <hr />

                    <div class="form-group d-flex justify-content-end">
                        <a href="@Url.Action("Index")" class="btn btn-secondary mr-2">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Tạo tài khoản
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-info">Lưu ý quản trị</h6>
            </div>
            <div class="card-body">
                <p>Khi tạo mới tài khoản nhân viên:</p>
                <ul>
                    <li><strong>Role:</strong> Mặc định là <span class="badge badge-info">Staff</span>.</li>
                    <li><strong>Trạng thái:</strong> Mặc định là <span class="badge badge-success">Active</span>.</li>
                    <li><strong>Mật khẩu:</strong> Nên đặt mật khẩu mạnh (VD: Staff@123).</li>
                    <li>Email không được trùng với tài khoản khác trong hệ thống.</li>
                </ul>
            </div>
        </div>
    </div>
</div>