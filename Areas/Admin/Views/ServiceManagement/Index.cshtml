@model List<_125_BCCK.Models.ViewModels.ServiceItemViewModel>
@{
    ViewBag.Title = "Quản Lý Dịch Vụ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-concierge-bell"></i> Quản Lý Dịch Vụ
    </h1>
    <a href="@Url.Action("Create")" class="btn btn-primary btn-icon-split">
        <span class="icon text-white-50">
            <i class="fas fa-plus"></i>
        </span>
        <span class="text">Thêm Dịch Vụ Mới</span>
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="row">
            <div class="col-md-6">
                <form method="get" class="d-inline-block">
                    <div class="input-group">
                        <input type="text" name="search" class="form-control"
                               placeholder="Tìm kiếm dịch vụ..."
                               value="@ViewBag.SearchTerm">
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-6 text-right">
                <div class="btn-group" role="group">
                    <a href="@Url.Action("Index")"
                       class="btn btn-sm @(ViewBag.CurrentCategory == null ? "btn-primary" : "btn-outline-primary")">
                        Tất cả
                    </a>
                    @foreach (var cat in ViewBag.Categories)
                    {
                        <a href="@Url.Action("Index", new { category = cat })"
                           class="btn btn-sm @(ViewBag.CurrentCategory == cat ? "btn-primary" : "btn-outline-primary")">
                            @cat
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th width="5%">#</th>
                            <th width="30%">Tên Dịch Vụ</th>
                            <th width="15%">Danh Mục</th>
                            <th width="12%">Giá</th>
                            <th width="13%">Thời Gian</th>
                            <th width="10%" class="text-center">Trạng Thái</th>
                            <th width="15%" class="text-center">Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ServiceId</td>
                                <td>
                                    <strong>@item.ServiceName</strong>
                                </td>
                                <td>
                                    <span class="badge @item.CategoryBadgeClass">
                                        @item.CategoryDisplay
                                    </span>
                                </td>
                                <td>
                                    <strong class="text-success">@item.PriceFormatted</strong>
                                </td>
                                <td>
                                    <i class="far fa-clock"></i> @item.DurationDisplay
                                </td>
                                <td class="text-center">
                                    <button class="btn btn-sm btn-toggle-active"
                                            data-id="@item.ServiceId">
                                        <i class="fas fa-circle text-success"></i> Hoạt động
                                    </button>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Edit", new { id = item.ServiceId })"
                                           class="btn btn-sm btn-warning" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = item.ServiceId })"
                                           class="btn btn-sm btn-danger" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-inbox fa-3x text-gray-300 mb-3"></i>
                <p class="text-gray-600">Không tìm thấy dịch vụ nào</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.btn-toggle-active').click(function () {
                var btn = $(this);
                var serviceId = btn.data('id');

                $.ajax({
                    url: '@Url.Action("ToggleActive")',
                    type: 'POST',
                    data: { id: serviceId },
                    success: function (response) {
                        if (response.success) {
                            if (response.isActive) {
                                btn.html('<i class="fas fa-circle text-success"></i> Hoạt động');
                                btn.removeClass('btn-secondary').addClass('btn-success');
                            } else {
                                btn.html('<i class="fas fa-circle text-secondary"></i> Vô hiệu');
                                btn.removeClass('btn-success').addClass('btn-secondary');
                            }
                            alert(response.message);
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert('Có lỗi xảy ra khi cập nhật trạng thái');
                    }
                });
            });
        });
    </script>
}