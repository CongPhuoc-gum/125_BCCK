@model _125_BCCK.Models.ViewModels.AppointmentDetailViewModel
@{
    ViewBag.Title = "Chi tiết lịch hẹn";
    Layout = "~/Areas/Staff/Views/Shared/_LayoutStaff.cshtml";
}

<div class="container my-4">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="fas fa-info-circle"></i> Chi tiết lịch hẹn #@Model.AppointmentId</h2>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Về Dashboard
            </a>
            <a href="@Url.Action("Appointments")" class="btn btn-secondary">
                <i class="fas fa-list"></i> Danh sách lịch hẹn
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["WarningMessage"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show">
            <i class="fas fa-exclamation-triangle"></i> @TempData["WarningMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-times-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Thông tin lịch hẹn -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-calendar"></i> Thông tin lịch hẹn</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <th width="40%">Ngày hẹn:</th>
                            <td><strong>@Model.AppointmentDate.ToString("dd/MM/yyyy")</strong></td>
                        </tr>
                        <tr>
                            <th>Giờ:</th>
                            <td><strong>@Model.TimeSlot</strong></td>
                        </tr>
                        <tr>
                            <th>Trạng thái:</th>
                            <td>
                                @if (Model.Status == "Pending")
                                {
                                    <span class="badge bg-warning text-dark">Chờ xử lý</span>
                                }
                                else if (Model.Status == "Confirmed")
                                {
                                    <span class="badge bg-info">Đã xác nhận</span>
                                }
                                else if (Model.Status == "Completed")
                                {
                                    <span class="badge bg-success">Hoàn thành</span>
                                }
                                else if (Model.Status == "Cancelled")
                                {
                                    <span class="badge bg-danger">Đã hủy</span>
                                }
                            </td>
                        </tr>
                    </table>

                    @if (!string.IsNullOrEmpty(Model.CustomerNotes))
                    {
                        <div class="alert alert-info">
                            <strong><i class="fas fa-comment"></i> Ghi chú từ khách:</strong>
                            <p class="mb-0 mt-2">@Model.CustomerNotes</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.StaffNotes))
                    {
                        <div class="alert alert-success">
                            <strong><i class="fas fa-clipboard"></i> Ghi chú từ nhân viên:</strong>
                            @{
                                var notes = Model.StaffNotes;
                                var imageUrl = "";
                                if (notes.Contains("Hình ảnh:"))
                                {
                                    var lines = notes.Split(new[] { '\n', '\r' }, StringSplitOptions.RemoveEmptyEntries);
                                    foreach (var line in lines)
                                    {
                                        if (line.Contains("Hình ảnh:"))
                                        {
                                            imageUrl = line.Replace("Hình ảnh:", "").Trim();
                                            notes = notes.Replace(line, "").Trim();
                                            break;
                                        }
                                    }
                                }
                            }
                            <p class="mb-0 mt-2" style="white-space: pre-line;">@notes</p>

                            @if (!string.IsNullOrEmpty(imageUrl))
                            {
                                <div class="mt-3">
                                    <strong><i class="fas fa-image"></i> Hình ảnh:</strong>
                                    <div class="mt-2">
                                        <a href="@imageUrl" target="_blank">
                                            <img src="@imageUrl" alt="Hình ảnh hoàn thành" class="img-thumbnail" style="max-width: 100%; max-height: 400px; cursor: pointer;" />
                                        </a>
                                        <br>
                                        <small class="text-muted">Click vào ảnh để xem kích thước đầy đủ</small>
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.CancelReason))
                    {
                        <div class="alert alert-danger">
                            <strong><i class="fas fa-times-circle"></i> Lý do hủy:</strong>
                            <p class="mb-0 mt-2">@Model.CancelReason</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Thông tin thanh toán -->
        <div class="col-md-6 mb-4">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fas fa-money-bill-wave"></i> Thông tin thanh toán</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <th width="40%">Tổng tiền:</th>
                            <td><strong class="text-danger fs-5">@Model.TotalPrice.ToString("N0") đ</strong></td>
                        </tr>
                        <tr>
                            <th>Tiền cọc (30%):</th>
                            <td>
                                @if (Model.DepositPaid)
                                {
                                    <span class="text-success">
                                        <i class="fas fa-check-circle"></i> @Model.DepositAmount.ToString("N0") đ
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted">@Model.DepositAmount.ToString("N0") đ (Chưa cọc)</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Còn lại:</th>
                            <td>
                                @if (Model.FullyPaid)
                                {
                                    <span class="text-success"><i class="fas fa-check-circle"></i> Đã thanh toán đầy đủ</span>
                                }
                                else
                                {
                                    <strong class="text-danger">@Model.RemainingAmount.ToString("N0") đ</strong>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Trạng thái:</th>
                            <td>
                                @if (Model.FullyPaid)
                                {
                                    <span class="badge bg-success">Đã thanh toán đủ</span>
                                }
                                else if (Model.DepositPaid)
                                {
                                    <span class="badge bg-warning text-dark">Đã cọc - Chưa thanh toán đủ</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Chưa thanh toán</span>
                                }
                            </td>
                        </tr>
                        @if (!string.IsNullOrEmpty(Model.PaymentMethod))
                        {
                            <tr>
                                <th>Phương thức:</th>
                                <td>@Model.PaymentMethod</td>
                            </tr>
                        }
                    </table>

                    @* Nút xử lý thanh toán *@
                    @if (!Model.FullyPaid && Model.RemainingAmount > 0 && Model.Status != "Cancelled")
                    {
                        <div class="mt-3">
                            <a href="@Url.Action("ProcessPayment", new { id = Model.AppointmentId })" class="btn btn-success w-100 btn-lg">
                                <i class="fas fa-cash-register"></i> Thu tiền phần còn lại (@Model.RemainingAmount.ToString("N0") đ)
                            </a>
                        </div>
                    }
                </div>
            </div>

            @* Lịch sử thanh toán *@
            @if (Model.PaymentHistory != null && Model.PaymentHistory.Count > 0)
            {
                <div class="card mt-3">
                    <div class="card-header bg-secondary text-white">
                        <h6 class="mb-0"><i class="fas fa-history"></i> Lịch sử thanh toán</h6>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-sm mb-0">
                            <thead>
                                <tr>
                                    <th>Loại</th>
                                    <th>Số tiền</th>
                                    <th>Phương thức</th>
                                    <th>Thời gian</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var payment in Model.PaymentHistory)
                                {
                                    <tr>
                                        <td>
                                            @if (payment.TransactionType == "Deposit")
                                            {
                                                <span class="badge bg-info">Đặt cọc</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Thanh toán</span>
                                            }
                                        </td>
                                        <td><strong>@payment.Amount.ToString("N0") đ</strong></td>
                                        <td>@payment.PaymentMethod</td>
                                        <td>
                                            <small>@payment.PaymentDate.ToString("dd/MM/yyyy HH:mm")</small>
                                            @if (!string.IsNullOrEmpty(payment.ProcessedByName))
                                            {
                                                <br><small class="text-muted">@payment.ProcessedByName</small>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="row">
        <!-- Thông tin khách hàng -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-user"></i> Thông tin khách hàng</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <th width="40%">Họ tên:</th>
                            <td>@Model.CustomerName</td>
                        </tr>
                        <tr>
                            <th>Email:</th>
                            <td>@Model.CustomerEmail</td>
                        </tr>
                        <tr>
                            <th>Điện thoại:</th>
                            <td><strong>@Model.CustomerPhone</strong></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <!-- Thông tin thú cưng -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-paw"></i> Thông tin thú cưng</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <th width="40%">Tên:</th>
                            <td><strong>@Model.PetName</strong></td>
                        </tr>
                        <tr>
                            <th>Loài:</th>
                            <td>@Model.Species</td>
                        </tr>
                        <tr>
                            <th>Giống:</th>
                            <td>@Model.Breed</td>
                        </tr>
                    </table>

                    @if (!string.IsNullOrEmpty(Model.SpecialNotes))
                    {
                        <div class="alert alert-warning">
                            <strong><i class="fas fa-exclamation-triangle"></i> Ghi chú đặc biệt:</strong>
                            <p class="mb-0 mt-2">@Model.SpecialNotes</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Dịch vụ -->
    <div class="row">
        <div class="col-12 mb-4">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="fas fa-list"></i> Dịch vụ đã đặt</h5>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Tên dịch vụ</th>
                                <th>Loại</th>
                                <th class="text-end">Giá</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var service in Model.Services)
                            {
                                <tr>
                                    <td><strong>@service.ServiceName</strong></td>
                                    <td><span class="badge bg-secondary">@service.Category</span></td>
                                    <td class="text-end">@service.Price.ToString("N0") đ</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="2">Tổng cộng:</th>
                                <th class="text-end text-danger fs-5">@Model.TotalPrice.ToString("N0") đ</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Các nút thao tác -->
    <div class="card">
        <div class="card-body">
            <div class="d-flex gap-2 flex-wrap">
                @* Chỉ hiển thị nút Hoàn thành nếu status là Confirmed *@
                @if (Model.Status == "Confirmed")
                {
                    <a href="@Url.Action("Complete", new { id = Model.AppointmentId })" class="btn btn-primary">
                        <i class="fas fa-check-circle"></i> Hoàn thành lịch hẹn
                    </a>
                }

                @* Nút Thu tiền (hiển thị nếu chưa thanh toán đủ) *@
                @if (!Model.FullyPaid && Model.RemainingAmount > 0 && Model.Status != "Cancelled")
                {
                    <a href="@Url.Action("ProcessPayment", new { id = Model.AppointmentId })" class="btn btn-success">
                        <i class="fas fa-cash-register"></i> Thu tiền còn lại (@Model.RemainingAmount.ToString("N0") đ)
                    </a>
                }

                @* Các nút khác *@
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-home"></i> Về Dashboard
                </a>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function () {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}