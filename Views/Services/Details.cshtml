@model _125_BCCK.Models.Service
@{
    ViewBag.Title = Model.ServiceName;
}

<div class="container py-5">
    <div class="row">
        <!-- Left Column - Service Info -->
        <div class="col-lg-8">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Dịch vụ</a></li>
                    <li class="breadcrumb-item active">@Model.ServiceName</li>
                </ol>
            </nav>

            <!-- Service Card -->
            <div class="card shadow-lg border-0">
                <!-- Image from Database -->
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Url.Content(Model.ImageUrl)"
                         class="card-img-top"
                         alt="@Model.ServiceName"
                         style="height: 400px; object-fit: cover;"
                         onerror="this.onerror=null; this.parentElement.innerHTML='<div class=\'card-img-top bg-gradient-primary text-white d-flex align-items-center justify-content-center\' style=\'height: 400px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);\'><i class=\'fas fa-image fa-10x opacity-25\'></i></div>';" />
                }
                else
                {
                    <div class="card-img-top bg-gradient-primary text-white d-flex align-items-center justify-content-center"
                         style="height: 400px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                        <i class="fas fa-image fa-10x opacity-25"></i>
                    </div>
                }

                <!-- Body -->
                <div class="card-body p-4">
                    <!-- Category Badge -->
                    <span class="badge bg-info text-dark mb-3 px-3 py-2">
                        <i class="fas fa-tag"></i> @Model.Category
                    </span>

                    <!-- Title -->
                    <h1 class="card-title display-6 fw-bold mb-4">@Model.ServiceName</h1>

                    <!-- Description -->
                    <div class="mb-4">
                        <h5 class="fw-bold mb-3">
                            <i class="fas fa-info-circle text-primary"></i> Mô tả dịch vụ
                        </h5>
                        <p class="text-muted lead">@Model.Description</p>
                    </div>

                    <!-- Features -->
                    <div class="mb-4">
                        <h5 class="fw-bold mb-3">
                            <i class="fas fa-check-circle text-success"></i> Quy trình thực hiện
                        </h5>
                        <ul class="list-unstyled">
                            @if (Model.Category == "Tắm rửa")
                            {
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Vệ sinh tai, mắt</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Tắm với dầu gội chuyên dụng</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Sấy khô và chải lông</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Cắt móng và vệ sinh móng</li>
                            }
                            else if (Model.Category == "Cắt tỉa")
                            {
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Tư vấn kiểu dáng phù hợp</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Cắt tỉa lông theo yêu cầu</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Tạo kiểu chuyên nghiệp</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Vệ sinh và hoàn thiện</li>
                            }
                            else if (Model.Category == "Y tế")
                            {
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Khám lâm sàng tổng quát</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Kiểm tra các chỉ số sức khỏe</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Tư vấn chăm sóc</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Lập hồ sơ sức khỏe</li>
                            }
                            else
                            {
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Dịch vụ chất lượng cao</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Đội ngũ chuyên nghiệp</li>
                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Tận tâm chu đáo</li>
                            }
                        </ul>
                    </div>

                    <!-- Note -->
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Lưu ý:</strong> Vui lòng đặt lịch trước ít nhất 2 giờ.
                        Có thể hủy/thay đổi lịch trước giờ hẹn 4 tiếng.
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column - Booking Card -->
        <div class="col-lg-4">
            <div class="booking-sidebar">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-primary text-white text-center py-3">
                        <h5 class="mb-0"><i class="fas fa-calendar-check"></i> Đặt lịch ngay</h5>
                    </div>
                    <div class="card-body p-4">
                        <!-- Price -->
                        <div class="text-center mb-4">
                            <h2 class="display-4 text-primary fw-bold mb-0">
                                @string.Format("{0:N0}", Model.Price) <small class="fs-5">đ</small>
                            </h2>
                        </div>

                        <!-- Info -->
                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">
                                    <i class="fas fa-clock text-primary"></i> Thời gian:
                                </span>
                                <strong>@Model.Duration phút</strong>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">
                                    <i class="fas fa-tag text-primary"></i> Danh mục:
                                </span>
                                <strong>@Model.Category</strong>
                            </div>
                        </div>

                        <hr>

                        <!-- Booking Button -->
                        @if (Session["UserId"] != null)
                        {
                            <a href="@Url.Action("Index", "Booking", new { serviceId = Model.ServiceId })"
                               class="btn btn-warning btn-lg w-100 mb-3">
                                <i class="fas fa-calendar-plus"></i> Đặt lịch ngay
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Account", new { returnUrl = Url.Action("Details", new { id = Model.ServiceId }) })"
                               class="btn btn-warning btn-lg w-100 mb-3">
                                <i class="fas fa-sign-in-alt"></i> Đăng nhập để đặt lịch
                            </a>
                        }

                        <!-- Contact -->
                        <a href="tel:1900xxxx" class="btn btn-outline-primary w-100">
                            <i class="fas fa-phone"></i> Hotline: 1900-xxxx
                        </a>

                        <!-- Features -->
                        <div class="mt-4">
                            <h6 class="fw-bold mb-3">
                                <i class="fas fa-shield-alt text-success"></i> Cam kết chất lượng
                            </h6>
                            <ul class="list-unstyled small">
                                <li class="mb-2">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    Đội ngũ chuyên nghiệp
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    Dụng cụ vệ sinh sạch sẽ
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    Sản phẩm chất lượng cao
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    Hoàn tiền nếu không hài lòng
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Related Services - Cùng danh mục -->
    @if (ViewBag.RelatedServices != null && ((List<_125_BCCK.Models.Service>)ViewBag.RelatedServices).Any())
    {
        <div class="row mt-5">
            <div class="col-12 mb-4">
                <h3 class="fw-bold">
                    <i class="fas fa-layer-group text-primary"></i> Dịch vụ cùng danh mục - @Model.Category
                </h3>
            </div>
            @foreach (var relatedService in (List<_125_BCCK.Models.Service>)ViewBag.RelatedServices)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm hover-card">
                        <!-- Image from Database -->
                        @if (!string.IsNullOrEmpty(relatedService.ImageUrl))
                        {
                            <img src="@Url.Content(relatedService.ImageUrl)"
                                 class="card-img-top"
                                 alt="@relatedService.ServiceName"
                                 style="height: 200px; object-fit: cover;"
                                 onerror="this.onerror=null; this.src='~/Content/Images/no-image.jpg';" />
                        }
                        else
                        {
                            <div class="card-img-top bg-secondary text-white d-flex align-items-center justify-content-center"
                                 style="height: 200px;">
                                <i class="fas fa-image fa-3x opacity-50"></i>
                            </div>
                        }
                        <div class="card-body d-flex flex-column">
                            <span class="badge bg-info text-dark mb-2 align-self-start">@relatedService.Category</span>
                            <h5 class="card-title">@relatedService.ServiceName</h5>
                            <p class="card-text text-muted small flex-grow-1">
                                @(relatedService.Description != null && relatedService.Description.Length > 80
                                    ? relatedService.Description.Substring(0, 80) + "..."
                                    : relatedService.Description)
                            </p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div>
                                        <div class="text-primary fw-bold fs-5">
                                            @string.Format("{0:N0}", relatedService.Price) đ
                                        </div>
                                        <small class="text-muted">
                                            <i class="fas fa-clock"></i> @relatedService.Duration phút
                                        </small>
                                    </div>
                                </div>
                                <a href="@Url.Action("Details", new { id = relatedService.ServiceId })"
                                   class="btn btn-outline-primary w-100">
                                    <i class="fas fa-info-circle"></i> Xem chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- Other Services - Gợi ý thêm -->
    @if (ViewBag.OtherServices != null && ((List<_125_BCCK.Models.Service>)ViewBag.OtherServices).Any())
    {
        <div class="row mt-5">
            <div class="col-12 mb-4">
                <h3 class="fw-bold">
                    <i class="fas fa-stars text-warning"></i> Dịch vụ khác bạn có thể quan tâm
                </h3>
            </div>
            @foreach (var otherService in (List<_125_BCCK.Models.Service>)ViewBag.OtherServices)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 shadow-sm hover-card">
                        <!-- Image from Database -->
                        @if (!string.IsNullOrEmpty(otherService.ImageUrl))
                        {
                            <img src="@Url.Content(otherService.ImageUrl)"
                                 class="card-img-top"
                                 alt="@otherService.ServiceName"
                                 style="height: 200px; object-fit: cover;"
                                 onerror="this.onerror=null; this.src='~/Content/Images/no-image.jpg';" />
                        }
                        else
                        {
                            <div class="card-img-top bg-secondary text-white d-flex align-items-center justify-content-center"
                                 style="height: 200px;">
                                <i class="fas fa-image fa-3x opacity-50"></i>
                            </div>
                        }
                        <div class="card-body d-flex flex-column">
                            <span class="badge bg-success text-white mb-2 align-self-start">@otherService.Category</span>
                            <h5 class="card-title">@otherService.ServiceName</h5>
                            <p class="card-text text-muted small flex-grow-1">
                                @(otherService.Description != null && otherService.Description.Length > 80
                                    ? otherService.Description.Substring(0, 80) + "..."
                                    : otherService.Description)
                            </p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <div>
                                        <div class="text-primary fw-bold fs-5">
                                            @string.Format("{0:N0}", otherService.Price) đ
                                        </div>
                                        <small class="text-muted">
                                            <i class="fas fa-clock"></i> @otherService.Duration phút
                                        </small>
                                    </div>
                                </div>
                                <a href="@Url.Action("Details", new { id = otherService.ServiceId })"
                                   class="btn btn-outline-success w-100">
                                    <i class="fas fa-eye"></i> Khám phá ngay
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section scripts {
    <style>
        /* Booking Sidebar Sticky */
        .booking-sidebar {
            position: sticky;
            top: 80px;
            z-index: 100;
        }



        .bg-gradient-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        /* Smooth scroll behavior */
        html {
            scroll-behavior: smooth;
        }

        /* Hover effect for related services */
        .hover-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .hover-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 30px rgba(0,0,0,0.15);
            }

        .card-img-top {
            transition: transform 0.3s ease;
        }

        .hover-card:hover .card-img-top {
            transform: scale(1.05);
        }

        .card {
            overflow: hidden;
        }
    </style>
}