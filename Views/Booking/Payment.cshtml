@model _125_BCCK.Models.ViewModels.BookingViewModel
@{
    ViewBag.Title = "Thanh toán cọc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="fas fa-file-invoice-dollar"></i> Xác nhận thanh toán</h3>
                </div>
                <div class="card-body">

                    @using (Html.BeginForm("ConfirmPayment", "Booking", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        @Html.HiddenFor(m => m.PetId)
                        @Html.HiddenFor(m => m.AppointmentDate)
                        @Html.HiddenFor(m => m.TimeSlot)
                        @Html.HiddenFor(m => m.ServiceIds)
                        @Html.HiddenFor(m => m.Notes)

                        <div class="alert alert-info">
                            <strong>Lưu ý:</strong> Bạn cần thanh toán trước <strong>30%</strong> giá trị dịch vụ để giữ chỗ.
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h5>Thông tin đặt lịch</h5>
                                <p><strong>Ngày hẹn:</strong> @Model.AppointmentDate.ToString("dd/MM/yyyy")</p>
                                <p><strong>Khung giờ:</strong> @Model.TimeSlot</p>
                                <p><strong>Ghi chú:</strong> @(string.IsNullOrEmpty(Model.Notes) ? "Không có" : Model.Notes)</p>
                            </div>
                            <div class="col-md-6 text-end">
                                <h5>Chi phí</h5>
                                <p>Tổng tiền: <span class="text-muted text-decoration-line-through">@Model.TotalAmount.ToString("N0") VNĐ</span></p>
                                <h4 class="text-danger">Cần cọc (30%): @Model.DepositAmount.ToString("N0") VNĐ</h4>
                            </div>
                        </div>

                        <hr />

                        <div class="text-center mb-4">
                            <h5>Quét mã QR để thanh toán</h5>
                            <img src="https://img.vietqr.io/image/MB-0000000000-compact2.png?amount=@Model.DepositAmount&addInfo=DAT COC PETCARE&accountName=PETCARE"
                                 alt="QR Code" class="img-fluid border p-2" style="max-width: 300px;" />
                            <p class="text-muted mt-2"><small>(Đây là mô phỏng, bạn cứ bấm nút xác nhận bên dưới nhé)</small></p>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-check-circle"></i> Tôi đã thanh toán xong
                            </button>
                            <a href="@Url.Action("Index", "Booking")" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>