@model List<_125_BCCK.Models.Service>
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="hero-section bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-3">
                    Chăm Sóc Thú Cưng <br>Chuyên Nghiệp
                </h1>
                <p class="lead mb-4">
                    Dịch vụ tắm rửa, cắt tỉa, khám bệnh và chăm sóc thú cưng tận tâm.
                    Đặt lịch online nhanh chóng, tiện lợi.
                </p>
                <div>
                    <a href="@Url.Action("Index", "Services")" class="btn btn-warning btn-lg me-3">
                        <i class="fas fa-list"></i> Xem dịch vụ
                    </a>
                    <a href="@Url.Action("SelectService", "Booking")" class="btn btn-light btn-lg">
                        <i class="fas fa-calendar-plus"></i> Đặt lịch ngay
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-paw fa-10x opacity-25"></i>
            </div>
        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3">
                <div class="feature-box p-4">
                    <i class="fas fa-user-md fa-3x text-primary mb-3"></i>
                    <h5>Đội Ngũ Chuyên Nghiệp</h5>
                    <p>Bác sĩ thú y và nhân viên giàu kinh nghiệm</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-box p-4">
                    <i class="fas fa-spa fa-3x text-primary mb-3"></i>
                    <h5>Dịch Vụ Đa Dạng</h5>
                    <p>Tắm, cắt tỉa, khám bệnh, tiêm phòng, spa</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-box p-4">
                    <i class="fas fa-calendar-check fa-3x text-primary mb-3"></i>
                    <h5>Đặt Lịch Online</h5>
                    <p>Đặt lịch nhanh chóng, tiện lợi 24/7</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="feature-box p-4">
                    <i class="fas fa-hand-holding-heart fa-3x text-primary mb-3"></i>
                    <h5>Chăm Sóc Tận Tâm</h5>
                    <p>Yêu thương và chăm sóc như thú cưng của chúng tôi</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Dịch Vụ Nổi Bật</h2>
        <div class="row">

            @if (Model != null && Model.Any())
            {
                foreach (var service in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-img-top bg-primary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="fas fa-paw fa-5x opacity-50"></i>
                            </div>
                            <div class="card-body">
                                <span class="badge bg-info text-dark mb-2">@service.Category</span>
                                <h5 class="card-title">@service.ServiceName</h5>
                                <p class="card-text text-muted">@service.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-primary fw-bold">
                                        @service.Price.ToString("N0") VNĐ
                                    </span>
                                    <span class="text-muted">
                                        <i class="fas fa-clock"></i> @service.Duration phút
                                    </span>
                                </div>
                            </div>
                            <div class="card-footer bg-white">
                                <a href="@Url.Action("Details", "Services", new { id = service.ServiceId })" class="btn btn-outline-primary w-100">
                                    Xem chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center py-5">
                    <i class="fas fa-exclamation-circle fa-2x text-warning mb-3"></i>
                    <p class="lead text-muted">Xin lỗi, hiện tại không có dịch vụ nổi bật nào được hiển thị.</p>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <a href="@Url.Action("Index", "Services")" class="btn btn-primary btn-lg">
                Xem tất cả dịch vụ <i class="fas fa-arrow-right"></i>
            </a>
        </div>
    </div>
</section>

<section class="py-5 bg-primary text-white">
    <div class="container text-center">
        <h2 class="mb-4">Sẵn Sàng Chăm Sóc Thú Cưng Của Bạn?</h2>
        <p class="lead mb-4">Đặt lịch ngay hôm nay để trải nghiệm dịch vụ tốt nhất!</p>
        <a href="@Url.Action("Register", "Account")" class="btn btn-warning btn-lg">
            <i class="fas fa-user-plus"></i> Đăng ký ngay
        </a>
    </div>
</section>

