@model List<_125_BCCK.Models.ViewModels.AppointmentListItemViewModel>
@{
    ViewBag.Title = "Danh sách lịch hẹn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-4">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="fas fa-calendar-alt"></i> Danh sách lịch hẹn</h2>
        </div>
    </div>

    <!-- Bộ lọc -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Thời gian</label>
                    <select name="filter" class="form-select">
                        <option value="all" @(ViewBag.Filter == "all" || string.IsNullOrEmpty(ViewBag.Filter) ? "selected" : "")>Tất cả</option>
                        <option value="today" @(ViewBag.Filter == "today" ? "selected" : "")>Hôm nay</option>
                        <option value="week" @(ViewBag.Filter == "week" ? "selected" : "")>Tuần này</option>
                        <option value="month" @(ViewBag.Filter == "month" ? "selected" : "")>Tháng này</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Trạng thái</label>
                    <select name="status" class="form-select">
                        <option value="">Tất cả</option>
                        <option value="Pending" @(ViewBag.Status == "Pending" ? "selected" : "")>Chờ xử lý</option>
                        <option value="Confirmed" @(ViewBag.Status == "Confirmed" ? "selected" : "")>Đã xác nhận</option>
                        <option value="Completed" @(ViewBag.Status == "Completed" ? "selected" : "")>Hoàn thành</option>
                        <option value="Cancelled" @(ViewBag.Status == "Cancelled" ? "selected" : "")>Đã hủy</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">&nbsp;</label>
                    <button type="submit" class="btn btn-primary d-block w-100">
                        <i class="fas fa-filter"></i> Lọc
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Danh sách lịch hẹn -->
    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Ngày</th>
                                <th>Giờ</th>
                                <th>Khách hàng</th>
                                <th>Thú cưng</th>
                                <th>Dịch vụ</th>
                                <th>Giá</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.AppointmentDate.ToString("dd/MM/yyyy")</td>
                                    <td><strong>@item.TimeSlot</strong></td>
                                    <td>@item.CustomerName</td>
                                    <td>
                                        @item.PetName
                                        <small class="text-muted">(@item.Species)</small>
                                    </td>
                                    <td>@item.Services</td>
                                    <td>@item.TotalPrice.ToString("N0") đ</td>
                                    <td>
                                        @if (item.Status == "Pending")
                                        {
                                            <span class="badge bg-warning text-dark">Chờ xử lý</span>
                                        }
                                        else if (item.Status == "Confirmed")
                                        {
                                            <span class="badge bg-info">Đã xác nhận</span>
                                        }
                                        else if (item.Status == "Completed")
                                        {
                                            <span class="badge bg-success">Hoàn thành</span>
                                        }
                                        else if (item.Status == "Cancelled")
                                        {
                                            <span class="badge bg-danger">Đã hủy</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", new { id = item.AppointmentId })" 
                                           class="btn btn-sm btn-primary">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Không tìm thấy lịch hẹn nào
                </div>
            }
        </div>
    </div>
</div>
